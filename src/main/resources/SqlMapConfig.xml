<configuration>

    <properties url="file:///C:/Users/hawk4/IdeaProjects/ImplCrawler/src/main/resources/jdbcConfig.properties"/>

    <typeAliases>
        <package name="pojo"/>
    </typeAliases>

    <environments default="mysql">
